<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:orientation="horizontal">

                    <ImageView

                        android:id="@+id/img_foto_user"
                        android:layout_width="70dp"
                        android:layout_height="70dp"

                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="176dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txt_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GitHub"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textIsSelectable="false"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="normal" />

                        <TextView
                            android:id="@+id/txt_cargo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Master en IA"
                            android:typeface="normal" />

                        <TextView
                            android:id="@+id/txt_fecha_publicacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="04/09/18"
                            android:typeface="normal" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/menu_publicacion"
                        android:layout_width="12dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableStart="@drawable/ic_action_name" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_titulo_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="LA PUBLICACION"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_contenido_publicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="Realizando pruebas de diseÃ±o para mi primera publicacion en android estudio "
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_contenido"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@android:color/background_dark" />

                    <VideoView
                        android:id="@+id/video_publicacion"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn_play"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_centerInParent="true"
                        android:drawableTop="@drawable/ic_media_play_light"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_likes_comentarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="0 Likes - 0 Comentarios" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_like"
                        android:layout_width="61dp"
                        android:layout_height="33dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/baseline_thumb_up_alt_black_18dp"

                        android:text="Me Gusta"
                        android:textAllCaps="false"
                        android:textColor="@color/text" />

                    <Button
                        android:id="@+id/btn_dislike"
                        android:layout_width="90dp"
                        android:layout_height="33dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/dislike"

                        android:text="No Me Gusta"
                        android:textAllCaps="false"
                        android:textColor="@color/text" />

                    <Button
                        android:id="@+id/btn_comentar"
                        android:layout_width="86dp"
                        android:layout_height="33dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/baseline_comment_black_18dp"

                        android:text="Comentar"
                        android:textAllCaps="false"
                        android:textColor="@color/text" />


                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>